<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.android_project_travel.OutilsVoyageActivity">

    <TextView
        android:id="@+id/outilsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outils de voyage"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageButton
        android:id="@+id/deviseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:srcCompat="@drawable/exchange"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="86dp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/outilsLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/deviseConvertisseurLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertisseur de devise"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="234dp"
        android:layout_below="@+id/deviseButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:background="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vaccine"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/deviseConvertisseurLabel"
        android:layout_alignStart="@+id/deviseButton" />

    <TextView
        android:id="@+id/vaccinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infos vaccins"
        android:layout_below="@+id/imageButton8"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/backButton"
        android:background="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:text="RETOUR" />


</RelativeLayout>
