<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.android_project_travel.GroupDetail">

    <TextView
        android:id="@+id/groupeDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Description du groupe"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/nomGroupeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Nom groupe"
        android:textSize="24sp"
        android:layout_below="@+id/groupeDetailLabel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/destinationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Destination"
        android:textSize="24sp"
        android:layout_below="@+id/nomGroupeText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rejoindreButton"
        android:background="@color/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJOINDRE"
        android:layout_above="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/backButton"
        android:background="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dateDebutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date dÃ©but"
        android:textSize="24sp"
        android:layout_below="@+id/destinationText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dateFinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Date fin"
        android:textSize="24sp"
        android:layout_below="@+id/dateDebutText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nbParticipantsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateFinText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Nombre participants"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/placeRestantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nbParticipantsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Place restante"
        android:textSize="24sp" />
</RelativeLayout>
