<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michael.android_project_travel.MesGroupesActivity">


    <Button
        android:id="@+id/ajouterGroupe"
        android:background="@color/colorGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOUVEAU GROUPE"
        android:layout_marginStart="53dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/mesGroupesLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mesGroupesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Mes groupes"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rechercherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="RECHERCHE GROUPE"
        android:layout_alignBaseline="@+id/ajouterGroupe"
        android:layout_alignBottom="@+id/ajouterGroupe"
        android:layout_toEndOf="@+id/ajouterGroupe"
        android:layout_marginStart="18dp" />
</RelativeLayout>
